@model IEnumerable<EmployeeManagementSystem.Models.Department>


@{
    ViewData["Title"] = "List";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>

                    @foreach (var employeeModel in Model.SelectMany(a => a.Employees).Where(Model => Model.DeptId == item.DeptId))
                    {
                        @Html.DisplayFor(Model => employeeModel.Name)
                        @*@Html.DisplayFor(Model => employeeModel.Surname)*@
                        <br />
                    }
                    @*@Html.DisplayFor(modelItem => item.Employees)*@
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeptId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DeptId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DeptId">Delete</a>
                </td>
            </tr>

        }

    </tbody>
</table>
